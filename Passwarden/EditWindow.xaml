<Window x:Class="Passwarden.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Passwarden"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="EditWindow" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="Username" />
            <TextBox Text="{Binding Username}"/>
            <TextBlock Text="Password" Margin="0, 20, 0, 0"/>
            <TextBox Text="{Binding Password}"/>
            <Button Content="Save" Click="SaveButton_Click" Margin="0, 30, 0, 0"/>
        </StackPanel>
    </Grid>
</Window>
