<Window x:Class="Passwarden.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Passwarden"
        mc:Ignorable="d"
        Title="Passwarden" Height="450" Width="500">
    <Window.Resources>
        <ContextMenu x:Key="PasswordContextMenu">
            <MenuItem Header="Copy pass" Click="CopyPassword_Click"/>
            <MenuItem Header="Copy login" Click="CopyPassword_Click"/>
            <MenuItem Header="Edit" Click="EditButton_Click"/>
            <MenuItem Header="Delete" />
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Панель с табами и кнопками -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель с табами и кнопками -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    
                </Grid.ColumnDefinitions>

                <!-- Табы -->
                <TabControl>
                    <TabControl.Template>
                        <ControlTemplate TargetType="TabControl">
                            <StackPanel>
                                <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                                    <TabPanel x:Name="HeaderPanel"
                                      Panel.ZIndex="1"
                                      KeyboardNavigation.TabIndex="1"
                                      Grid.Column="0"
                                      Grid.Row="0"
                                      Margin="2,2,2,0"
                                      IsItemsHost="true"/>
                                </ScrollViewer>
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          Margin="{TemplateBinding Padding}"
                                          ContentSource="SelectedContent"/>
                            </StackPanel>
                        </ControlTemplate>
                    </TabControl.Template>

                    <!-- Пример TabItem с крестиком и контекстным меню -->
                    <TabItem Header="Default">
                        <TabItem.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    <Button Content="✕" 
                                        Width="20" 
                                        Height="20" 
                                        Margin="5,0,0,0" 
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="CloseTabButton_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </TabItem.HeaderTemplate>

                        <!-- Контекстное меню -->
                        <TabItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить" Click="DeleteTabMenuItem_Click"/>
                                <MenuItem Header="Переименовать" Click="RenameTabMenuItem_Click"/>
                            </ContextMenu>
                        </TabItem.ContextMenu>
                    </TabItem>
                    <TabItem Header="Default">
                        <TabItem.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    <Button Content="✕" 
                    Width="20" 
                    Height="20" 
                    Margin="5,0,0,0" 
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseTabButton_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </TabItem.HeaderTemplate>

                        <!-- Контекстное меню -->
                        <TabItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить" Click="DeleteTabMenuItem_Click"/>
                                <MenuItem Header="Переименовать" Click="RenameTabMenuItem_Click"/>
                            </ContextMenu>
                        </TabItem.ContextMenu>
                    </TabItem>
                    <TabItem Header="Default">
                        <TabItem.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    <Button Content="✕" 
                    Width="20" 
                    Height="20" 
                    Margin="5,0,0,0" 
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseTabButton_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </TabItem.HeaderTemplate>

                        <!-- Контекстное меню -->
                        <TabItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить" Click="DeleteTabMenuItem_Click"/>
                                <MenuItem Header="Переименовать" Click="RenameTabMenuItem_Click"/>
                            </ContextMenu>
                        </TabItem.ContextMenu>
                    </TabItem>

                    <!-- Другие TabItem -->
                </TabControl>

                <!-- Кнопки -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content=" Add Tab " Width="Auto" Click="AddTabButton_Click"/>
                    <Button Content=" Settings " Width="Auto"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <ListView x:Name="PrimaryList"
                  Grid.Row="1"        
                  VerticalAlignment="Stretch"
                          Margin="5"
                    Width="Auto">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="ContextMenu" Value="{StaticResource PasswordContextMenu}"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Username"
                                Width="100"
                                DisplayMemberBinding="{ Binding Username }"/>
                        <GridViewColumn Header="Password"
                                Width="100"
                                DisplayMemberBinding="{ Binding Password }"/>
                        <GridViewColumn Header="URL"
                                Width="100"
                                DisplayMemberBinding="{ Binding Priority }"/>
                        <GridViewColumn Header="Modified"
                                Width="100"
                                DisplayMemberBinding="{ Binding Date }"/>
                    
                    </GridView.Columns>
                    <GridView.ColumnHeaderContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add New"/>
                        </ContextMenu>
                    </GridView.ColumnHeaderContextMenu>
                </GridView>

            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add New"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
        
        <Button Grid.Row="2" Margin="5" Content="Add new"/>
    </Grid>

</Window>
